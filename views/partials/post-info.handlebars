<article class="post">
  <div class="title">
    <a href="/dashboard/edit/{{id}}" class="edit-link">{{title}}</a>
  </div>
  <div>
    <p>{{content}}</p>
  </div>
  <div class="meta">
    by
    {{user.username}}
    on
    {{format_date created_at}}
    |
    <a href="/post/{{id}}">{{comments.length}}
      {{comments.length}}</a>
  </div>
</article>